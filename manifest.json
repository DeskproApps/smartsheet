{
  "name": "@deskpro-apps/smartsheet",
  "title": "Smartsheet",
  "description": "Manage your Smartsheet tasks directly in Deskpro for a seamless workflow integration.",
  "version": "0.0.22",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "settings": {
    "use_deskpro_saas": {
      "title": "One-Click Installation",
      "type": "boolean",
      "default": true,
      "isRequired": false,
      "isBackendOnly": false,
      "order": 5
    },
    "client_id": {
      "title": "Client Id",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": false,
      "condition": "settings.use_deskpro_saas != true",
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true",
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback", "height": "80px" },
      "isRequired": false,
      "isBackendOnly": true,
      "condition": "settings.use_deskpro_saas != true",
      "order": 30
    }
  },
  "entityAssociations": {
    "linkedSmartsheetTasks": {
      "entity": "ticket",
      "type": "external_id",
      "title": "Linked Smartsheet tasks(rows)"
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://app.smartsheet.com/b/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      },
      {
        "url": "https://api.smartsheet.com/2.0/.*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "timeout": 20
      }
    ]
  }
}
