{
  "name": "@deskpro-apps/smartsheet",
  "title": "Smartsheet",
  "description": "My Deskpro app",
  "version": "0.0.21",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "settings": {
    "access_token": {
      "title": "Access token",
      "description": "Smartsheet Access token",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true
    }
  },
  "entityAssociations":{
    "linkedSmartsheetTasks": {
      "entity": "ticket",
      "type": "external_id",
      "title": "Linked Smartsheet tasks(rows)"
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://api.smartsheet.com/2.0/.*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "timeout": 20
      }
    ]
  }
}
